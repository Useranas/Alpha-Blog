<h2 align="center">Title:<%= @article.title%></h2>
 <div class="well col-md-offset-2 col-md-8">
  <h4 align="center"><strong>Description</strong></h4>
  <hr>
<%= (@article.description)%>
<div class="article_action">
  <%= link_to 'Edit this article',edit_article_path(@article), class: "btn btn-xs btn-primary"%>
  <%= link_to 'Delete this article',article_path(@article), method: :delete, data: {  confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger"%>	
  <%= link_to 'view all articles', articles_path, class: "btn btn-success btn-xs"%>
</div>
 